<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/actionGroupSchema.xsd">
    <actionGroup name="PosLogoutActionGroup">
        <conditionalClick selector="{{MenuSection.backButton}}" dependentSelector="{{MenuSection.backButton}}" visible="true" stepKey="clickBackButton"/>
        <waitForElementVisible selector="{{MenuSection.menuButton}}" time="30" stepKey="waitForMenuButtonVisible"/>
        <conditionalClick selector="{{MenuSection.menuButton}}" dependentSelector="{{MenuSection.menuButton}}" visible="true" stepKey="clickMenuButton"/>
        <waitForElementVisible selector="{{MenuSection.menuItem('item-logout')}}" time="30" stepKey="waitForMenuVisible"/>
        <click selector="{{MenuSection.menuItem('item-logout')}}" stepKey="clickLogout" />
        <waitForElementVisible selector="{{PopupLogoutSection.yesButton}}" time="30" stepKey="waitForLogoutPopupVisible"/>
        <click selector="{{PopupLogoutSection.yesButton}}" stepKey="clickYes" />
        <waitForElementNotVisible selector="{{PopupLogoutSection.yesButton}}" time="30" stepKey="waitForLogoutPopupNotVisible"/>
        <waitForElementVisible selector="{{PosLoginFormSection.username}}" time="30" stepKey="waitForLogoutSuccess"/>
    </actionGroup>
</actionGroups>
